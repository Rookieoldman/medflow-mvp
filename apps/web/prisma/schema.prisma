generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  role              Role

  transfersAssigned Transfer[] @relation("AssignedTransfers")
  transfersCreated  Transfer[] @relation("CreatedTransfers")
  incidentsCreated  Incident[] @relation("IncidentsCreated")

  transferAcceptances TransferAcceptance[]

  createdAt         DateTime   @default(now())
}

model Transfer {
  id              String         @id @default(cuid())

  priority        Priority       @default(NORMAL)
  status          TransferStatus @default(SOLICITADO)
  previousStatus  TransferStatus?

  mrn             String
  patientFullName String
  dob             DateTime
  location        String
  testType        TestType

  createdById     String
  createdBy       User           @relation("CreatedTransfers", fields: [createdById], references: [id])

  assignedToId    String?
  assignedTo      User?          @relation("AssignedTransfers", fields: [assignedToId], references: [id])

  acceptance      TransferAcceptance?

  incidents       Incident[]

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model TransferAcceptance {
  id            String   @id @default(cuid())

  transferId    String   @unique
  transfer      Transfer @relation(fields: [transferId], references: [id])

  signerName    String
  signerRole    String?
  signatureData String

  celadorId     String
  celador       User     @relation(fields: [celadorId], references: [id])

  signedAt      DateTime @default(now())
}

model Incident {
  id           String   @id @default(cuid())

  transferId   String
  transfer     Transfer @relation(fields: [transferId], references: [id])

  type         IncidentType
  note         String?

  createdById  String?
  createdBy    User?    @relation("IncidentsCreated", fields: [createdById], references: [id])

  createdAt    DateTime @default(now())
}

enum Role {
  TECNICO
  CELADOR
  ADMIN
}

enum Priority {
  NORMAL
  URGENTE
}

enum TransferStatus {
  SOLICITADO
  ASIGNADO
  EN_CURSO
  EN_CAMINO_PRUEBA
  EN_ESPERA
  EN_LA_PRUEBA
  VUELTA
  FINALIZADO
  PAUSADO
  CANCELADO
}

enum IncidentType {
  PACIENTE_NO_PREPARADO
  ESPERA_CLINICA
  PRUEBA_CANCELADA
  OTRO
}

enum TestType {
  RM
  ECO
  RX
  MEDICINA_NUCLEAR
  TC
}